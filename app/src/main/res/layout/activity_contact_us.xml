<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contact_us">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_sweet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Contact us"
        app:titleTextColor="#FFF" />
    <include
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        layout="@layout/connectivity_layout" />


    <RelativeLayout
        android:id="@+id/contact_email"
        android:layout_width="match_parent"
        android:layout_height="77sp"
        android:layout_marginStart="15sp"
        android:layout_marginTop="176sp"
        android:layout_marginEnd="15sp"
        android:background="@drawable/layout_bg"
        android:elevation="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/contact_us_here"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20sp"
            app:srcCompat="@drawable/ic_mail" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15sp"
            android:layout_toEndOf="@+id/contact_us_here"
            android:text="Email us here !"
            android:textColor="#000"
            android:textSize="21sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/feedback_contact"
        android:layout_width="match_parent"
        android:layout_height="77sp"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:background="@drawable/layout_bg"
        android:elevation="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_email"
        app:layout_constraintVertical_bias="0.052">

        <ImageView
            android:id="@+id/feedback"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20sp"
            app:srcCompat="@drawable/ic_feedback" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15sp"
            android:layout_toEndOf="@+id/feedback"
            android:text="Write Feedback !"
            android:textColor="#000"
            android:textSize="21sp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>